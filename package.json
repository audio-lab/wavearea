{
  "name": "wavearea",
  "version": "1.0.0",
  "description": "Edit audio in textarea",
  "main": "index.js",
  "scripts": {
    "start": "esbuild ./src/waev.js ./src/worker.js ./src/decoder/*.js --bundle --external:./src/decoder/* --sourcemap --loader:.svg=text --format=esm --outdir=dist --servedir=.",
    "build": "rm -rf ./dist/* && esbuild ./src/waev.js ./src/worker.js ./src/decoder/*.js --bundle --external:./src/decoder/* --minify --sourcemap --loader:.svg=text --format=esm --outdir=dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/audio-lab/wavearea.git"
  },
  "keywords": [
    "audio",
    "web-audio",
    "waveform",
    "dsp"
  ],
  "author": "Î”Y <dfcreative@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/audio-lab/wavearea/issues"
  },
  "homepage": "https://github.com/audio-lab/wavearea#readme",
  "dependencies": {
    "@github/file-attachment-element": "^3.1.0",
    "@github/textarea-autosize": "^0.3.1",
    "audio-buffer": "^5.0.0",
    "audio-type": "^1.0.2",
    "audioworklet-polyfill": "^1.1.2",
    "base64-arraybuffer": "^1.0.2",
    "kv-storage-polyfill": "^2.0.0",
    "mpg123-decoder": "^0.4.2",
    "nanopop": "^2.1.0",
    "node-wav": "^0.0.2",
    "ogg-opus-decoder": "^1.5.2",
    "oggmented": "^1.0.1",
    "sprae": "^2.11.1"
  },
  "devDependencies": {
    "esbuild": "^0.16.12"
  }
}
